<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_login"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.pepperkim.baseframework.ui.login.LoginFragment"
        android:label="@string/menu_title_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@+id/signupFragment"/>

    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.pepperkim.baseframework.ui.signup.SignUpFragment"
        android:label="@string/menu_title_sign_up"
        tools:layout="@layout/fragment_sign_up">

    </fragment>

</navigation>